generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model HOD {
  id    Int    @id @default(autoincrement())
  email String @unique
}

model TeamLead {
  id       Int         @id @default(autoincrement())
  email    String      @unique
  requests ODRequest[] @relation("RequestedBy")
}

model User {
  id       Int         @id @default(autoincrement())
  user_id  String      @unique
  name     String
  email    String      @unique
  sec      String
  year     Int
  counts   Count?
  requests ODRequest[] @relation("RequestFor")
}

model ODRequest {
  id           String           @id @default(uuid())
  date         DateTime         @default(now())
  user_id      String
  reason       String
  description  String
  teamlead_id  Int
  status       Int              @default(0)
  from_time    DateTime
  to_time      DateTime
  request_type String
  attendance   Boolean          @default(false)
  request_by   TeamLead         @relation("RequestedBy", fields: [teamlead_id], references: [id])
  user         User             @relation("RequestFor", fields: [user_id], references: [user_id])
  attendance_detail AttendanceDetail?
}


model AttendanceDetail {
  id           String     @id @default(uuid())
  request_id   String     @unique
  request      ODRequest  @relation(fields: [request_id], references: [id])
  forenoon     Boolean    @default(false)
  afternoon    Boolean    @default(false)
  date         DateTime
}

model Count {
  id           Int    @id @default(autoincrement())
  email        String @unique
  stayback_cnt Int    @default(0)
  meeting_cnt  Int    @default(0)
  user         User   @relation(fields: [email], references: [email])
}

model Meeting {
  id        String   @id @default(uuid())
  team      String
  title     String
  from_time DateTime
  to_time   DateTime
  date      DateTime
  students  String[]
}

model StaybackDate {
  id        String     @id @default(uuid())
  date      DateTime   @unique
  staybacks Stayback[]
}

model Stayback {
  id            String       @id @default(uuid())
  team          String
  title         String
  dateGroup     StaybackDate @relation(fields: [dateGroupId], references: [id])
  dateGroupId   String
  students      String[]
}